generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}  

model Objective {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  title       String
  deadline    DateTime
  color       String
  activities  Activity[]
}

model Activity {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  objective   Objective @relation(fields: [objectiveId], references: [id])
  objectiveId String    @db.ObjectId
  userId      String
  startDay    String
  startTime   Int
  endDay      String
  endTime     Int
}
